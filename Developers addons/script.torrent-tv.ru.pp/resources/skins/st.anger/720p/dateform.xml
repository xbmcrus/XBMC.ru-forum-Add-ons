<window>
  <allowoverlay>no</allowoverlay>
  <coordinates>
    <system>1</system>
    <posx>500</posx>
    <posy>175</posy>
  </coordinates>
  <animation effect="fade" time="250">WindowOpen</animation>
  <animation effect="fade" time="250">WindowClose</animation>
  <controls>
    <control type="group">
      <description>Window</description>
      <control type="image" id="999">
        <description>background image</description>
        <posx>-</posx>
        <posy>-</posy>
        <width>150</width>
        <height>234</height>
        <texture border="20">ContextMenu.png</texture>
      </control>
      <control type="label" id="102">
        <posx>20</posx>
        <posy>15</posy>
      </control>
      <control type="list" id="103">
        <posx>15</posx>
        <posy>40</posy>
        <width>120</width>
        <height>175</height>
        <itemlayout width="120" height="30">
          <control type="image">
            <width>120</width>
            <height>25</height>
            <posx>0</posx>
            <posy>0</posy>
            <visible>true</visible>
            <texture>itemnofocus.png</texture>
          </control>
          <control type="label">
            <posx>5</posx>
            <posy>-3</posy>
            <width>120</width>
            <height>30</height>
            <font>fontContextMenu</font>
            <aligny>center</aligny>
            <selectedcolor>green</selectedcolor>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>
        </itemlayout>
        <focusedlayout width="120" height="30">
            <control type="image">
              <width>120</width>
              <height>25</height>
              <posx>0</posx>
              <posy>0</posy>
              <visible>true</visible>
              <texture>itemfocus.png</texture>
            </control>
            <control type="label">
              <posx>5</posx>
              <posy>-3</posy>
              <width>120</width>
              <height>30</height>
              <font>fontContextMenu</font>
              <aligny>center</aligny>
              <selectedcolor>green</selectedcolor>
              <align>left</align>
              <info>ListItem.Label</info>
            </control>
          </focusedlayout>
      </control>
    </control>
  </controls>
</window>