<window type="window" id="14000">
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <control type="image">
                <description>Black Background</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <texture>black.png</texture>
            </control>
            <control type="image">
                <description>The spinning animation in the background</description>
                <posx>607</posx>
                <posy>327</posy>
                <width>66</width>
                <height>66</height>
                <texture>loader.gif</texture>
            </control>
            <control type="list" id="100">
                <description>Main list of Images</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <scrolltime>200</scrolltime>
                <orientation>horizontal</orientation>
                <preloaditems>10</preloaditems>
                <itemlayout width="1280" height="720">
                    <control type="largeimage">
                        <description>The Picture in ratio scale</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>StringCompare(ListItem.Property(aspectratio),scale)</visible>
                    </control>
                    <control type="largeimage">
                        <description>The Picture in ratio keep</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <visible>StringCompare(ListItem.Property(aspectratio),keep)</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="1280" height="720">
                    <control type="largeimage">
                        <description>The Picture in ratio scale</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>StringCompare(ListItem.Property(aspectratio),scale)</visible>
                    </control>
                    <control type="largeimage">
                        <description>The Picture in ratio keep</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <visible>StringCompare(ListItem.Property(aspectratio),keep)</visible>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
